{% extends "./layout.jinja2" %}
{% block content %}
    <div class="content-section ">
        <form action="" method="POST" novalidate>
            {{ form.hidden_tag() }}
            <fieldset class="form-group">
                <legend>Register your new account</legend>
                <div class="form-group">
                    {{ form.current_password.label(class="form-control-label") }}
                    {% if form.current_password.errors %}
                        {{ form.current_password(class="form-control is-invalid") }}
                        <div class="invalid-feedback">
                            {% for error in form.current_password.errors %}
                                <span>{{error}}</span>
                            {% endfor %}
                        </div>
                    {% else %}
                        {{ form.current_password(class="form-control") }} 
                    {% endif %}        
                </div>

                <div class="form-group">
                    {{ form.password.label(class="form-control-label") }}
                    {% if form.password.errors %}
                        {{ form.password(class="form-control is-invalid") }}
                        <div class="invalid-feedback">
                            {% for error in form.password.errors %}
                                <span>{{error}}</span>
                            {% endfor %}
                        </div>
                    {% else %}
                        {{ form.password(class="form-control") }} 
                    {% endif %}
                </div>

                <div class="form-group">
                    {{ form.password2.label(class="form-control-label") }}
                    {% if form.password2.errors %}
                        {{ form.password2(class="form-control is-invalid") }}
                        <div class="invalid-feedback">
                            {% for error in form.password2.errors %}
                                <span>{{error}}</span>
                            {% endfor %}
                        </div>
                    {% else %}
                        {{ form.password2(class="form-control") }} 
                    {% endif %}        
                </div>

            </fieldset>
                <br/>
                <div class="form-group">
                    {{ form.submit(class="btn btn-danger") }}
                    <a href="{{url_for('main.home')}}" class="btn btn-primary">Cancel</a>   
                </div>     
        </form>
        <br/>       
    </div>
{% endblock content %}