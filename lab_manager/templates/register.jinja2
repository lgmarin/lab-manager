                            {% endfor %}
                        </div>
                    {% else %}
                        {{ form.password2(class="form-control") }} 
                    {% endif %}        
                </div>

            </fieldset>
                <br/>
                <div class="form-group">
                    {{ form.submit(class="btn btn-primary") }}
                </div>            
        </form>
        <br/>
        <div class="border-top pt-3">
            <small class="text-muted">
                If you already have an account, click here to <a class="ml-2" href="{{ url_for('users.login') }}">Login</a>
            </small>
        </div>        
    </div>
